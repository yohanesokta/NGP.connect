// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
}

model Users {
  id            Int    @id @default(autoincrement())
  sub           String @unique
  username      String
  email         String
  role          String
  image_profile String
  class         Json   @default("[]")
}

model Class {
  id         Int    @id @default(autoincrement())
  uuid       String @unique
  nama_kelas String
  kode       String
  thub       String @default("")
  desc       String @default("")
  members    Json   @default("[]")
}
